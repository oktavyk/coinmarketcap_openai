{
    "openapi": "3.1.0",
    "info": {
      "title": "CoinMarketCap API",
      "version": "1.0.0",
      "description": "API для работы с данными о криптовалютах"
    },
    "servers": [
      {
        "url": "https://pro-api.coinmarketcap.com/v1"
      }
    ],
    "paths": {
      "/cryptocurrency/listings/latest": {
        "get": {
          "summary": "Получить последние данные о криптовалютах",
          "parameters": [
            {
              "name": "start",
              "in": "query",
              "description": "Начальная позиция выборки",
              "required": false,
              "schema": { "type": "integer" }
            },
            {
              "name": "limit",
              "in": "query",
              "description": "Количество возвращаемых записей",
              "required": false,
              "schema": { "type": "integer" }
            }
          ],
          "responses": {
            "200": {
              "description": "Успешный ответ",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/CryptoListingResponse"
                  }
                }
              }
            }
          },
          "security": [
            {
              "ApiKeyAuth": []
            }
          ]
        }
      }
    },
    "components": {
      "schemas": {
        "CryptoListingResponse": {
          "type": "object",
          "properties": {
            "status": {
              "type": "object",
              "properties": {
                "timestamp": { "type": "string", "format": "date-time" },
                "error_code": { "type": "integer" },
                "error_message": { "type": ["string", "null"] },
                "elapsed": { "type": "integer" },
                "credit_count": { "type": "integer" }
              }
            },
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer" },
                  "name": { "type": "string" },
                  "symbol": { "type": "string" },
                  "slug": { "type": "string" },
                  "quote": {
                    "type": "object",
                    "properties": {
                      "price": { "type": "number" },
                      "volume_24h": { "type": "number" },
                      "percent_change_1h": { "type": "number" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "securitySchemes": {
        "ApiKeyAuth": {
          "type": "apiKey",
          "in": "header",
          "name": "X-CMC_PRO_API_KEY"
        }
      }
    }
  }
  